<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="exchangeApp.Pages.DetailsPage"
             Title="Деталі">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Основний вміст сторінки -->
        <StackLayout Grid.Row="0" Spacing="10">
            <Label Text="{Binding Cc}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Txt}" FontSize="18" />
            <Label Text="{Binding Rate, StringFormat='Курс: {0:F2}'}" FontSize="18" />
            <Label Text="{Binding ExchangeDate}" FontSize="18" />
            <!-- Додайте інші деталі за потреби -->
        </StackLayout>
        <!-- Кнопка внизу -->
        <Button Grid.Row="2"
                Text="Закрити"
                Margin="0,20,0,0"
                Clicked="OnCloseButtonClicked"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="End"/>
    </Grid>
</ContentPage>
