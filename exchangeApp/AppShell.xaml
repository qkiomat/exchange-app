<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="exchangeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:exchangeApp"
    xmlns:pages="clr-namespace:exchangeApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="exchangeApp">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->
    <!-- Пункти бічного меню -->
    <FlyoutItem Title="Головна" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Деталі" Icon="details.png">
        <ShellContent ContentTemplate="{DataTemplate pages:DetailsPage}" />
    </FlyoutItem>

    <!-- Додаткові кнопки у бічне меню -->
    <MenuItem Text="Про програму"
              Clicked="OnAboutClicked"
              IconImageSource="about.png" />

    <MenuItem Text="Вихід"
              Clicked="OnExitClicked"
              IconImageSource="exit.png" />


</Shell>
